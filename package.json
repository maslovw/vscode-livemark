{
  "name": "livemark",
  "displayName": "Livemark",
  "description": "WYSIWYG Markdown editor for VS Code",
  "version": "0.1.56",
  "publisher": "livemark",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "livemark.editor",
        "displayName": "Livemark",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "livemark.toggleBold",
        "title": "Livemark: Toggle Bold"
      },
      {
        "command": "livemark.toggleItalic",
        "title": "Livemark: Toggle Italic"
      },
      {
        "command": "livemark.toggleStrikethrough",
        "title": "Livemark: Toggle Strikethrough"
      },
      {
        "command": "livemark.toggleCode",
        "title": "Livemark: Toggle Inline Code"
      },
      {
        "command": "livemark.setHeading1",
        "title": "Livemark: Set Heading 1"
      },
      {
        "command": "livemark.setHeading2",
        "title": "Livemark: Set Heading 2"
      },
      {
        "command": "livemark.setHeading3",
        "title": "Livemark: Set Heading 3"
      },
      {
        "command": "livemark.setHeading4",
        "title": "Livemark: Set Heading 4"
      },
      {
        "command": "livemark.setHeading5",
        "title": "Livemark: Set Heading 5"
      },
      {
        "command": "livemark.setHeading6",
        "title": "Livemark: Set Heading 6"
      },
      {
        "command": "livemark.increaseHeadingLevel",
        "title": "Livemark: Increase Heading Level"
      },
      {
        "command": "livemark.decreaseHeadingLevel",
        "title": "Livemark: Decrease Heading Level"
      },
      {
        "command": "livemark.toggleSourceMode",
        "title": "Livemark: Toggle Source/Rendered Mode"
      },
      {
        "command": "livemark.openWithLivemark",
        "title": "Open with Livemark"
      }
    ],
    "keybindings": [
      {
        "command": "livemark.toggleBold",
        "key": "ctrl+b",
        "mac": "cmd+b",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.toggleItalic",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.setHeading1",
        "key": "ctrl+1",
        "mac": "cmd+1",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.setHeading2",
        "key": "ctrl+2",
        "mac": "cmd+2",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.setHeading3",
        "key": "ctrl+3",
        "mac": "cmd+3",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.setHeading4",
        "key": "ctrl+4",
        "mac": "cmd+4",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.setHeading5",
        "key": "ctrl+5",
        "mac": "cmd+5",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.setHeading6",
        "key": "ctrl+6",
        "mac": "cmd+6",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.increaseHeadingLevel",
        "key": "ctrl+]",
        "mac": "cmd+]",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.decreaseHeadingLevel",
        "key": "ctrl+[",
        "mac": "cmd+[",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.toggleStrikethrough",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.toggleCode",
        "key": "ctrl+e",
        "mac": "cmd+e",
        "when": "activeCustomEditorId == livemark.editor"
      },
      {
        "command": "livemark.toggleSourceMode",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "activeCustomEditorId == livemark.editor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "livemark.openWithLivemark",
          "when": "resourceExtname == .md || resourceExtname == .markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Livemark",
      "properties": {
        "livemark.imageSaveFolder": {
          "type": "string",
          "default": "assets",
          "description": "Folder (relative to workspace root) where pasted images are saved. Supports {mdfilepath} to resolve to the markdown file's directory."
        },
        "livemark.imageNamePattern": {
          "type": "string",
          "default": "image-{timestamp}",
          "description": "Naming pattern for saved images. Supports {timestamp}, {hash}, {original}, {mdfilename}"
        },
        "livemark.confirmImagePath": {
          "type": "boolean",
          "default": false,
          "description": "When true, shows a dialog to confirm/edit the image path and filename before saving pasted images."
        },
        "livemark.alignment": {
          "type": "string",
          "default": "center",
          "enum": [
            "center",
            "left"
          ],
          "enumDescriptions": [
            "Content is centered horizontally",
            "Content is aligned to the left"
          ],
          "description": "Horizontal alignment for the rendered markdown view."
        },
        "livemark.width": {
          "type": "string",
          "default": "compact",
          "enum": [
            "compact",
            "wide",
            "fit",
            "resizable"
          ],
          "enumDescriptions": [
            "Compact width (800px, scrollable if viewport is narrower)",
            "Wide width (1200px, scrollable if viewport is narrower)",
            "Fit to visible window width",
            "Resizable width (drag edges to resize, 400â€“2400px)"
          ],
          "description": "Content width mode for the rendered markdown view."
        },
        "livemark.contentWidth": {
          "type": "number",
          "default": 800,
          "minimum": 400,
          "maximum": 2400,
          "description": "Content width in pixels when using the 'resizable' width mode."
        },
        "livemark.toolbarContextMode": {
          "type": "string",
          "default": "disable",
          "enum": [
            "disable",
            "hide"
          ],
          "enumDescriptions": [
            "Irrelevant buttons are grayed out (disabled)",
            "Irrelevant buttons are hidden entirely"
          ],
          "description": "How context-irrelevant toolbar buttons behave."
        },
        "livemark.showLayoutControls": {
          "type": "boolean",
          "default": true,
          "description": "Show alignment and width selectors in the toolbar."
        },
        "livemark.plantumlServer": {
          "type": "string",
          "default": "https://www.plantuml.com/plantuml",
          "description": "PlantUML server URL used for rendering diagrams. Default uses the public server."
        }
      }
    }
  },
  "scripts": {
    "build:webview": "cd webview-ui && npm run build",
    "build:extension": "node esbuild.mjs",
    "build:tests": "node esbuild.mjs --tests",
    "bump": "node scripts/bump-version.mjs",
    "build": "npm run bump && npm run build:webview && npm run build:extension",
    "watch:extension": "node esbuild.mjs --watch",
    "dev:webview": "cd webview-ui && npm run dev",
    "test:integration": "npm run build:tests && node dist/test/runTest.js",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "typescript": "^5.3.0"
  }
}
